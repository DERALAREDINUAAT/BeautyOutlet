<!DOCTYPE html>
<html lang="ro">

<head>
    <meta name="description" content="Detalii produs - BeautyOutlet">
    <meta name="keywords" content="cosmetice, parfumuri, produs, detalii">

    <title><%= prod.nume %> - BeautyOutlet</title>
    <%- include("../fragmente/head") %>
    <link href="/resurse/css/produs.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <header class="c1" id="titlu">
        <h1>BeautyOutlet</h1>
        <%- include("../fragmente/header") %>
    </header>

    <main>
        <section>
            <h2><%= prod.nume %></h2>

            <article id="ent<%= prod.id %>" class="produs <%= prod.categorie.replace(/\s/g, "") %>">
                <div class="info">
                    <table>
                        <tr>
                            <th>Preț</th>
                            <th>Cantitate (ml)</th>
                            <th>Tip produs</th>
                            <th>Culoare</th>
                            <th>Ingrediente</th>
                            <th>Dată adăugare</th>
                            <th>Vegan</th>
                        </tr>
                        <tr>
                            <td><%= prod.pret %> RON</td>
                            <td><%= prod.cantitate_ml ?? "N/A" %></td>
                            <td><%= prod.tip_produs %></td>
                            <td><%= prod.culoare || "Nespecificată" %></td>
                            <td><%= prod.ingrediente ? prod.ingrediente.join(", ") : "N/A" %></td>
                            <td>
                                <time datetime="<%= prod.data_adaugare.toISOString() %>">
                                    <%= prod.data_adaugare.toLocaleDateString("ro-RO", {
                                        weekday: "long",
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric"
                                    }) %>
                                </time>
                            </td>
                            <td><%= prod.vegan ? "Da" : "Nu" %></td>
                        </tr>
                    </table>
                </div>

                <p class="descriere"><strong>Descriere:</strong> <%= prod.descriere %></p>
                <p class="categorie"><strong>Categorie:</strong> <%= prod.categorie %></p>

                <figure class="imag-produs">
                    <img src="/resurse/imagini/produse/<%= prod.imagine %>" alt="[imagine <%= prod.nume %>]" />
                </figure>
            </article>
        </section>
    </main>

    <%- include("../fragmente/footer") %>
</body>

</html>
